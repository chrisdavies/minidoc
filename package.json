{
  "name": "minidoc-editor",
  "version": "0.0.13",
  "main": "./dist/minidoc.min.js",
  "types": "./dist/types",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "jasmine",
    "test:watch": "onchange -i -k \"src/**/*.{js,jsx,ts,tsx}\" --exclude \"**/dist/**\" -- npm run test",
    "start": "npm-run-all --parallel watch:**",
    "watch:ts": "onchange -i -k \"src/**/*.{js,jsx,ts,tsx}\" -k \"public/**/*.{js,jsx,ts,tsx}\" --exclude \"**/dist/**\" -- npm run dev:rebuild",
    "watch:browser": "browser-sync public/ --server --cwd public/ -w",
    "watch:css": "postcss css/index.css -o public/dist/bundle.css -w",
    "dev:rebuild": "esbuild --global-name=minidoc --bundle public/demo.ts --outfile=public/dist/bundle.js --sourcemap=inline --define:process.env.NODE_ENV=\"'development'\" && tsc --noEmit",
    "prepare": "rm -rf ./dist && npm test && npm-run-all --parallel release:**",
    "release:types": "tsc --declaration --declarationDir dist/types --declarationMap --emitDeclarationOnly",
    "release:css": "NODE_ENV=production postcss css/index.css -o dist/minidoc.min.css",
    "release:js": "NODE_ENV=production esbuild --minify --sourcemap=external --format=cjs --bundle src/index.ts --outfile=dist/minidoc.min.js"
  },
  "author": "Chris Davies <dev@christophilus.com>",
  "license": "ISC",
  "description": "A lightweight contenteditable.",
  "devDependencies": {
    "@sinonjs/fake-timers": "6.0.1",
    "@types/jasmine": "3.6.2",
    "@types/puppeteer": "5.4.0",
    "@types/sinonjs__fake-timers": "6.0.2",
    "autoprefixer": "10.0.3",
    "browser-sync": "2.26.13",
    "cssnano": "4.1.10",
    "esbuild": "0.8.26",
    "jasmine": "3.6.3",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "playwright": "1.7.1",
    "postcss": "8.1.10",
    "postcss-cli": "8.3.0",
    "postcss-import": "13.0.0",
    "sirv": "1.0.7",
    "ts-node": "9.1.0",
    "typescript": "4.1.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
