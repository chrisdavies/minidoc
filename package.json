{
  "name": "minidoc-ts",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jasmine",
    "test:watch": "onchange -i -k \"src/**/*.{js,jsx,ts,tsx}\" --exclude \"**/dist/**\" -- npm run test",
    "start": "npm-run-all --parallel watch:**",
    "watch:ts": "onchange -i -k \"src/**/*.{js,jsx,ts,tsx}\" -- npm run dev:rebuild",
    "watch:browser": "browser-sync public/ --server --cwd public/ -w",
    "watch:css": "postcss css/index.css -o public/dist/bundle.css -w",
    "dev:rebuild": "esbuild --global-name=minidoc --bundle public/demo.ts --outfile=public/dist/bundle.js --sourcemap=inline --define:process.env.NODE_ENV=\"'development'\" && tsc --noEmit"
  },
  "author": "Chris Davies <dev@christophilus.com>",
  "license": "ISC",
  "description": "A lightweight contenteditable.",
  "devDependencies": {
    "@types/jasmine": "3.6.2",
    "@types/puppeteer": "5.4.0",
    "autoprefixer": "10.0.3",
    "browser-sync": "2.26.13",
    "cssnano": "4.1.10",
    "esbuild": "0.8.16",
    "jasmine": "3.6.3",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "playwright": "1.6.2",
    "postcss": "8.1.10",
    "postcss-cli": "8.3.0",
    "postcss-import": "13.0.0",
    "sirv": "1.0.7",
    "ts-node": "9.1.0",
    "typescript": "4.1.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
